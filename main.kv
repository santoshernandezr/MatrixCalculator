WindowManager:
    MainWindow:
    InverseWindow:
    TransposeWindow:
    RowReduceWindow:
    AdditionWindow:
    SubtractionWindow:
    MultiplicationWindow:
    ThirdWindow:

<MainWindow>:
    name: "main"

    FloatLayout:
        cols: 1
        FloatLayout:
            cols: 2
            Label: 
                pos_hint: {"y": 0.45}
                text: "MATRIX CALCULATOR"

        Button:
            text: "Addition"
            pos_hint: {"x": 0.17, "y": 0.7}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "addition"
                root.manager.transition.direction = "left"
        Button:
            text: "Subtraction"
            pos_hint: {"x": 0.17, "y": 0.4}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "subtraction"
                root.manager.transition.direction = "left"
        Button:
            text: "Multiplication"
            pos_hint: {"x": 0.17, "y": 0.1}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "multiplication"
                root.manager.transition.direction = "left"
        Button: 
            text: "Row Reduce \nEchelon Form"
            pos_hint: {"x": 0.63, "y": 0.7}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "RowReduce"
                root.manager.transition.direction = "left"
        Button:
            text: "Transpose"
            pos_hint: {"x": 0.63, "y": 0.4}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "transpose"
                root.manager.transition.direction = "left"
        Button:
            text: "Inverse"
            pos_hint: {"x": 0.63, "y": 0.1}
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "inverse"
                root.manager.transition.direction = "left"

<InverseWindow>:
    name: "inverse"

    invCols: invCols
    invRows: invRows

    FloatLayout:
        cols: 1
        FloatLayout:
            cols: 2
            Label: 
                pos_hint: {"y": 0.45}
                text: "MATRIX CALCULATOR"

        Label:
            text: "Columns:"
            size_hint: 0.4, .12
            pos_hint: {"x": 0.15, "top": 0.75}
            font_size: (root.width ** 2 + root.height ** 2) / 14 ** 4

        TextInput:
            id: invCols
            font_size: (root.width ** 2 + root.height ** 2) / 14.5 ** 4
            multiline: False
            pos_hint: {"x": 0.5, "top": 0.72}
            size_hint: 0.4, 0.06

        Label:
            text: "Rows:"
            size_hint: 0.4, .1
            pos_hint: {"x": 0.17, "top": 0.5}
            font_size: (root.width ** 2 + root.height ** 2) / 14 ** 4

        TextInput:
            id: invRows
            font_size: (root.width ** 2 + root.height ** 2) / 14.5 ** 4
            multiline: False
            pos_hint: {"x": 0.5, "top": 0.48}
            size_hint: 0.4, 0.06
        Button: 
            text: "Go Back"
            size_hint: 0.2, 0.2
            on_release: 
                app.root.current = "main"
                root.manager.transition.direction = "right"
        Button: 
            text: "Go!"
            size_hint: 0.2, 0.2
            pos_hint: {"x": 0.8}
            on_press: root.makeInvGrid()
            on_release: 
                app.root.current = "last"
                root.manager.transition.direction = "left"

